        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("https://github.com/dshaps10/duckpond.github.io/blob/master/event_pic.jpg?raw=true");
        background-size: cover;
        background-repeat: no-repeat;
      }

      #event-info {
        text-align: center;
        color: white;
        /* background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("./event_pic.jpg"); */
        padding: 10px;  
      }

      h1 {
        font-family: 'Press Start 2P';
        font-size: 4em;
      }

      h4 {
        text-align: center;
        font-size: 1em;
      }

      .music {
        padding-top: 50px;
        padding-bottom: 100px;
      }

      .section-header {
        text-align: center;
        font-family: "Press Start 2P";
        color: #C84C0C;
      }

      .title {
        font-family: "Press Start 2P";
      }
      
