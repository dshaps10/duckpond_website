    <style>

      @keyframes appear {
        0% { opacity: 0; }
        100% { opacity: 1; }
      }

      nav {
        background: linear-gradient(to right, #ffb75e, #ed8f03); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */;
      }

      .vertical-center {
        border-radius: none;
        display: flex;
        align-items: center;
        height: 100vh;
        text-align: center;
        /* background: black; */
        background: linear-gradient(to right, #ffb75e, #ed8f03); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background-repeat: no-repeat;
        background-position: bottom;
        background-size: cover;
        color: white;
      }

      .vertical-center img {
        height: 500px;
        width: 500px;
        animation: appear 4s;
      }

      .footer {
        padding: 10px;
        background-color: #d9d9d9;
      }

